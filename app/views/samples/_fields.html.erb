<% form.inputs :name => 'Sample Information' do %>
  <%= form.input :site_id, :as => :hidden %>
  <%= form.input :lab_number %>
  <%= form.input :radiocarbon_age_bp, :label => 'Radiocarbon Age Before Present' %>
  <%= form.input :std_dev, :label => 'Standard Deviation' %>
  <%= form.input :lower_cal_date, :label => 'Lower Calibrated Date' %>
  <%= form.input :median_cal_date, :label => 'Median Calibrated Date' %>
  <%= form.input :upper_cal_date, :label => 'Upper Calibrated Date' %>
  <%= form.input :description, :as => :text %>
<% end %>